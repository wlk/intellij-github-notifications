<idea-plugin>
    <id>com.wlangiewicz.intellijgithubnotifications</id>
    <name>GitHub Notifications</name>
    <version>0.1</version>
    <vendor url="https://www.wlangiewicz.com">Wojciech Langiewicz</vendor>

    <description><![CDATA[
      Plugin to display GitHub notifications right in the IDE
    ]]></description>

    <change-notes><![CDATA[
      TODO
    ]]>
    </change-notes>

    <idea-version since-build="171.0"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="GHNotifications.Menu" text="_GitHub Notifications" description="GitHub Notifications">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="GHNotifications.GitHubApiKeyDialog" class="com.wlangiewicz.gh.GitHubApiKeyDialog"
                    text="Enter _API Key" description="Enter GitHub API Key">
            </action>
            <action id="GHNotifications.GetNotifications" class="com.wlangiewicz.gh.GetNotifications"
                    text="Get Github Notifications" description="Get Github Notifications">
                <add-to-group group-id="MainMenu" anchor="last"/>
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl G"/>
            </action>
        </group>
    </actions>

</idea-plugin>